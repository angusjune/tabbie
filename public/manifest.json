{
  "manifest_version": 2,
  "name": "Tabbie: Undo closed tabs",
  "short_name": "Tabbie",
  "version": "0.9.0",
  "description": "Tabbie allows you to reopen closed tabs from a simple and elegant popup window.",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Recently closed tabs",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "sessions"
  ],
  "options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}